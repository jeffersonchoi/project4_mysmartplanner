

  <h1> Pre Trip Survey </h1>

  <%= form_for @trip do |f| %>
  <div>
    <%= f.label :destination %>
    <%= f.select :destination, CS.cities(:ca, :us)  %>
  </div>
  <div>
    <%= f.label :start_date, :class => "control-label"%>
    <%= f.date_select :start_date, :start_year => Date.today.year, :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }  %>
  </div>
  <div>
    <%= f.label :end_date, :class => "control-label"%>
    <%= f.date_select :end_date, :start_year => Date.today.year,:prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' }  %>
  </div>

  <div>
    <%= f.label :budget_in_usd %>
    <%= f.number_field :budget, :class => 'text_field', :step => 'any' %>
  </div>

  <div>
    <%= f.label :hours_per_day %>
    <%= f.number_field :hours_per_day, :class => 'text_field', :step => 'any' %>
  </div>

  <div>
    <%= f.label :interest %>

    <%= f.label "Theme Parks" %>
    <%= f.check_box :interest, {}, "Theme Parks" %>
    <%= f.label "Sight & Landmarks" %>
    <%= f.check_box :interest, {}, "Sight & Landmarks" %>
    <%= f.label "Museums" %>
    <%= f.check_box :interest, {}, "Museums" %>

  </div>

  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>


  <% end %>
