<%= form_for @user do |f| %>
<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<form role="form">
			<h2>Please Sign Up <small>It's free and always will be.</small></h2>
			<hr class="colorgraph">
			<div class="row">

				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, :class => "form-control input-lg", placeholder:"First Name" %>
					</div>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, :class => "form-control input-lg", placeholder:"First Name" %>
					</div>
				</div>
			</div>

        <div class="col-xs-12 col-sm-5 col-md-5">
					<div class="form-group">
              <%= f.label :gender %>

              <%= f.radio_button :gender, 'male' %>
              <%= f.label :male%>

              <%= f.radio_button :gender, 'female' %>
              <%= f.label :female %>
					</div>
				</div>

        <div class="col-xs-12 col-sm-7 col-md-7">
					<div class="form-group">
            <div>
              <%= f.label :date_of_bith %>
              <%= f.date_select(:dob, :start_year => 1940, :end_year => 2010) %>
            </div>
          </div>
        </div>

			<div class="form-group">
        <div>
          <%= f.label :email %>
          <%= f.text_field :email, class:"form-control input-lg", placeholder:"Email Address" %>
        </div>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
            <div>
              <%= f.label :password %>
              <%= f.password_field :password, class:"form-control input-lg", placeholder:"Password" %>
            </div>
					</div>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-6">
          <div>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class:"form-control input-lg", placeholder:"Confirm Password" %>
          </div>
				</div>
			</div>
